<div id="<%= dom_id aircraft %>">
  <p>
    <strong>Tail:</strong>
    <%= aircraft.tail %>
  </p>

  <p>
    <strong>Make:</strong>
    <%= aircraft.make %>
  </p>

  <p>
    <strong>Model:</strong>
    <%= aircraft.model %>
  </p>

  <p>
    <strong>Year:</strong>
    <%= aircraft.year %>
  </p>

  <p>
    <strong>Serial:</strong>
    <%= aircraft.serial %>
  </p>

  <p>
    <strong>Tt:</strong>
    <%= aircraft.tt %>
  </p>

  <p>
    <strong>Flight Time:</strong>
    <%= aircraft.flights.sum(&:time) %>
  </p>

  <p>
    <strong>Fuel:</strong>
    <%= aircraft.flights.sum(&:fuel) %>
  </p>

  <p>
    <strong>Oil:</strong>
    <%= aircraft.flights.sum(&:oil) %>
  </p>

  <%= link_to :flights, [aircraft, :flights]%>

</div>
